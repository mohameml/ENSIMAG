l <- c(0.516 , 0.887, 0.783, 0.613, 0.697, 0.459, 0.724, 0.755, 0.867, 0.893, 0.835, 0.718 ,0.851, 0.386, 0.855)
lt <- sort(l)
n <- length(l)
k <- round(1+log2(n))
diff <- lt[n]-lt[1]
a0 <- lt[1] -0.025*diff
ak <- lt[n]+0.025*diff
h <- (ak - a0)/k
hist(lt,prob=T,breaks=seq(a0,ak,h))
